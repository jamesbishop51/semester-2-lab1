        <TextBlock x:Name="tbx_members" Grid.Column="2" HorizontalAlignment="Left" Margin="69.667,154,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="50" Width="175"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="69.667,209,0,0" TextWrapping="Wrap" Text="Albums" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Height="27" Width="71"/>
        <ListBox Grid.Column="2" HorizontalAlignment="Left" Height="170" Margin="69.667,241,0,0" VerticalAlignment="Top" Width="224"/>
    </Grid>
</Window>
